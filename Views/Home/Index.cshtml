<script>
    document.addEventListener('DOMContentLoaded', () => {
        const searchInput = document.getElementById('algoSearch');
        const cards = document.querySelectorAll('.module-card');
        const grid = document.getElementById('modulesGrid');

        searchInput.addEventListener('input', (e) => {
            const term = e.target.value.toLowerCase().trim();
            let visibleCount = 0;

            cards.forEach(card => {
                const title = card.querySelector('.module-title').textContent.toLowerCase();
                const desc = card.querySelector('.module-description').textContent.toLowerCase();
                const badge = card.querySelector('.module-badge').textContent.toLowerCase();

                if (title.includes(term) || desc.includes(term) || badge.includes(term)) {
                    card.style.display = ''; // Restore default
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });
            
            // Optional: Show message if no results
            // if (visibleCount === 0) ...
        });
        
    });
</script>
