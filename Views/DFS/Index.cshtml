@{
    ViewData["Title"] = "DFS Tree Traversal";
}

<div class="space-y-6 animate-fade-in-up">
    <div class="glass-panel algo-header">
        <div class="header-left">
            <h1 style="font-size: 1.875rem; font-weight: bold; background: linear-gradient(135deg, #f472b6 0%, #3b82f6 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; margin-bottom: 0.25rem;">
                DFS Tree Traversal
            </h1>
            <p style="color: #64748b; font-size: 0.875rem;">Depth-First Search (Pre-order, In-order, Post-order) on BST.</p>
        </div>
        <div class="header-right" style="display: flex; align-items: center; gap: 1.5rem;">
             <div style="text-align: right;">
                <div id="timerDisplay" style="font-family: monospace; font-size: 1.5rem; font-weight: bold; color: #fbbf24; line-height: 1;">00:00</div>
                <div style="font-size: 0.875rem; color: #94a3b8;">Score: <span id="currentScoreDisplay">0</span></div>
            </div>
            <button id="resetBtn" class="btn btn-secondary">Reset</button>
        </div>
    </div>

    <div class="puzzle-grid">
        <div class="glass-panel" style="padding: 2rem; border-radius: 1rem; min-height: 500px;">
            <div id="mapContainer" style="position: relative; width: 100%; height: auto; min-height: 500px; background: rgba(10, 25, 41, 0.5); border-radius: 0.5rem; overflow: hidden;">
                <div style="position: absolute; inset: 0; width: 100%; height: 100%; display: grid; grid-template-columns: repeat(10, 1fr); grid-template-rows: repeat(10, 1fr); pointer-events: none; opacity: 0.2;">
                    @for(int i = 0; i < 100; i++) { <div style="border: 1px solid #334155;"></div> }
                </div>
                <svg id="algoSvg" viewBox="0 0 800 600" style="position: absolute; inset: 0; width: 100%; height: 100%; pointer-events: auto;"></svg>
                <div id="resultOverlay" style="position: absolute; inset: 0; display: none; align-items: center; justify-content: center; pointer-events: none; z-index: 10;">
                    <div style="background: rgba(15, 23, 42, 0.95); padding: 2.5rem; border-radius: 1rem; border: 1px solid #334155; text-align: center; backdrop-filter: blur(8px); min-width: 320px;">
                        <h2 style="font-size: 1.75rem; font-weight: bold; color: #60a5fa; margin-bottom: 1.5rem;">ðŸŽ‰ DFS Complete!</h2>
                        <div style="display: flex; flex-direction: column; gap: 0.75rem; margin-bottom: 2rem;">
                            <div style="color: #cbd5e1; font-size: 1.1rem;">Order: <span id="resultTraversal" style="color: #f472b6; font-weight: bold;">-</span></div>
                            <div style="color: #cbd5e1; font-size: 1.1rem;">Time: <span id="resultTime" style="color: #4ade80; font-weight: bold;">00:00</span></div>
                            <div style="color: #cbd5e1; font-size: 1.1rem;">Score: <span id="finalScore" style="color: #c084fc; font-weight: bold;">0</span></div>
                        </div>
                        <button id="closeResultBtn" class="btn btn-primary" style="pointer-events: auto;">Close</button>
                    </div>
                </div>
                <div id="overlayMessage" style="position: absolute; inset: 0; display: flex; align-items: center; justify-content: center; pointer-events: none;">
                    <div style="color: #94a3b8; font-size: 0.875rem; background: rgba(0,0,0,0.6); padding: 1rem; border-radius: 0.5rem;">Generate a BST to begin</div>
                </div>
            </div>
        </div>

        <div class="glass-panel" style="padding: 1.5rem; border-radius: 1rem; display: flex; flex-direction: column; gap: 1.5rem;">
            <div id="inputSection">
                <h3 style="font-size: 1.125rem; font-weight: 600; color: white; margin-bottom: 1rem;">Tree Generation</h3>
                <div style="display: flex; gap: 0.5rem; margin-bottom: 1rem;">
                    <button id="tabRandom" class="btn btn-sm btn-primary" style="flex: 1;">Random</button>
                    <button id="tabManual" class="btn btn-sm btn-secondary" style="flex: 1;">Manual</button>
                </div>
                <div id="randomInputGroup">
                    <label style="display: block; color: #94a3b8; font-size: 0.875rem; margin-bottom: 0.5rem;">Node Count (1-15)</label>
                    <input type="number" id="nodeCountInput" value="7" min="1" max="15" class="form-control" style="width: 100%; background: #1e293b; border: 1px solid #334155; color: white; padding: 0.5rem; border-radius: 0.25rem; margin-bottom: 1.5rem;">
                    <button id="generateRandomBtn" class="btn btn-primary" style="width: 100%;">Generate Random BST</button>
                </div>
                <div id="manualInputGroup" style="display: none;">
                    <label style="display: block; color: #94a3b8; font-size: 0.875rem; margin-bottom: 0.5rem;">Values</label>
                    <textarea id="manualValueInput" rows="4" style="width: 100%; background: #1e293b; border: 1px solid #334155; color: white; padding: 0.5rem; border-radius: 0.25rem; margin-bottom: 1.5rem; font-family: monospace;">50, 30, 70, 20, 40, 60, 80</textarea>
                    <button id="generateManualBtn" class="btn btn-primary" style="width: 100%;">Generate From Data</button>
                </div>
            </div>

            <div id="actionSection" style="display: none; flex-direction: column; gap: 1rem;">
                <h3 style="font-size: 1.125rem; font-weight: 600; color: white; margin-bottom: 0.5rem;">Controls</h3>
                <div style="margin-bottom: 1.5rem;">
                    <label style="color: #94a3b8; font-size: 0.875rem; display: block; margin-bottom: 0.5rem;">Traversal Type:</label>
                    <select id="traversalTypeSelect" class="form-control" style="width: 100%; background: #1e293b; border: 1px solid #334155; color: white; padding: 0.5rem; border-radius: 0.25rem;">
                        <option value="PreOrder">Pre-order (Root, L, R)</option>
                        <option value="InOrder">In-order (L, Root, R)</option>
                        <option value="PostOrder">Post-order (L, R, Root)</option>
                    </select>
                </div>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                    <button id="solveBtn" class="btn btn-primary" style="background: linear-gradient(135deg, #f472b6 0%, #3b82f6 100%); border: none;">DFS (Auto)</button>
                    <button id="manualSolveBtn" class="btn btn-secondary" style="border-color: #facc15; color: #facc15;">Manual Solve</button>
                </div>
                 <div id="stepControls" style="display: none; gap: 0.5rem; justify-content: center; margin-top: 0.5rem;">
                     <button id="prevBtn" class="btn btn-sm btn-secondary" style="padding: 0.25rem 0.75rem;">&lt;</button>
                     <button id="pauseBtn" class="btn btn-sm btn-secondary" style="padding: 0.25rem 0.75rem;">||</button>
                     <button id="nextBtn" class="btn btn-sm btn-secondary" style="padding: 0.25rem 0.75rem;">&gt;</button>
                 </div>
            </div>

            <div style="border-top: 1px solid rgba(255, 255, 255, 0.1); padding-top: 1rem;">
                 <h3 style="font-size: 1.125rem; font-weight: 600; color: white; margin-bottom: 0.75rem;">Status</h3>
                 <div id="statusText" style="margin-bottom: 1rem; font-size: 0.875rem; color: #cbd5e1; min-height: 3rem; background: rgba(0,0,0,0.2); padding: 0.5rem; border-radius: 0.5rem;">Ready to generate BST.</div>
            </div>

            <div style="border-top: 1px solid rgba(255, 255, 255, 0.1); padding-top: 1rem; margin-top: 1rem;">
                <h3 style="font-size: 1.125rem; font-weight: 600; color: white; margin-bottom: 1rem;">Complexity Analysis</h3>
                
                <div style="margin-bottom: 1.5rem;">
                    <div style="margin-bottom: 1rem;">
                        <p style="color: #94a3b8; font-size: 0.875rem; margin-bottom: 0.5rem;">Time Complexity:</p>
                        <div style="display: inline-block; background: rgba(139, 92, 246, 0.2); border: 1px solid rgba(139, 92, 246, 0.5); color: #e9d5ff; padding: 0.5rem 1rem; border-radius: 0.5rem; font-family: monospace; font-weight: 600; letter-spacing: 0.05em;">
                            O(N)
                        </div>
                    </div>
                    
                    <div style="margin-bottom: 1rem;">
                        <p style="color: #94a3b8; font-size: 0.875rem; margin-bottom: 0.5rem;">Space Complexity:</p>
                        <div style="display: inline-block; background: rgba(244, 63, 94, 0.2); border: 1px solid rgba(244, 63, 94, 0.5); color: #fecdd3; padding: 0.5rem 1rem; border-radius: 0.5rem; font-family: monospace; font-weight: 600; letter-spacing: 0.05em;">
                            O(H)
                        </div>
                    </div>
                </div>

                <h3 style="font-size: 1.125rem; font-weight: 600; color: white; margin-bottom: 0.75rem;">How it works</h3>
                <p style="font-size: 0.875rem; color: #94a3b8; line-height: 1.6; margin-bottom: 1.5rem;">
                    Depth-First Search (DFS) explores the tree as deeply as possible along each branch before backtracking. It uses <span style="color: #c084fc; font-weight: 600;">Recursion</span> to visit nodes.
                </p>

                <div style="display: flex; flex-direction: column; gap: 1rem;">
                    <div>
                        <p style="color: #f472b6; font-size: 0.75rem; font-weight: bold; margin-bottom: 0.25rem;">1. Pre-order (Root, L, R)</p>
                        <div style="background: rgba(0, 0, 0, 0.3); padding: 0.75rem; border-radius: 0.5rem; border: 1px solid rgba(52, 211, 153, 0.2); font-family: monospace; font-size: 0.75rem; color: #34d399;">
                            void PreOrder(node):<br>
                            &nbsp;&nbsp;if (node == null) return<br>
                            &nbsp;&nbsp;<span style="color: #fbbf24;">print node.val</span><br>
                            &nbsp;&nbsp;PreOrder(node.left)<br>
                            &nbsp;&nbsp;PreOrder(node.right)
                        </div>
                    </div>

                    <div>
                        <p style="color: #60a5fa; font-size: 0.75rem; font-weight: bold; margin-bottom: 0.25rem;">2. In-order (L, Root, R)</p>
                        <div style="background: rgba(0, 0, 0, 0.3); padding: 0.75rem; border-radius: 0.5rem; border: 1px solid rgba(52, 211, 153, 0.2); font-family: monospace; font-size: 0.75rem; color: #34d399;">
                            void InOrder(node):<br>
                            &nbsp;&nbsp;if (node == null) return<br>
                            &nbsp;&nbsp;InOrder(node.left)<br>
                            &nbsp;&nbsp;<span style="color: #fbbf24;">print node.val</span><br>
                            &nbsp;&nbsp;InOrder(node.right)
                        </div>
                    </div>

                    <div>
                        <p style="color: #c084fc; font-size: 0.75rem; font-weight: bold; margin-bottom: 0.25rem;">3. Post-order (L, R, Root)</p>
                        <div style="background: rgba(0, 0, 0, 0.3); padding: 0.75rem; border-radius: 0.5rem; border: 1px solid rgba(52, 211, 153, 0.2); font-family: monospace; font-size: 0.75rem; color: #34d399;">
                            void PostOrder(node):<br>
                            &nbsp;&nbsp;if (node == null) return<br>
                            &nbsp;&nbsp;PostOrder(node.left)<br>
                            &nbsp;&nbsp;PostOrder(node.right)<br>
                            &nbsp;&nbsp;<span style="color: #fbbf24;">print node.val</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts { <script src="~/js/dfs.js"></script> }
