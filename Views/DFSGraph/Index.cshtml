@{
    ViewData["Title"] = "DFS Graph Traversal";
}

<div class="space-y-6 animate-fade-in-up">
    <div class="glass-panel algo-header">
        <div class="header-left">
            <h1 style="font-size: 1.875rem; font-weight: bold; background: linear-gradient(135deg, #f472b6 0%, #a855f7 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; margin-bottom: 0.25rem;">
                DFS Graph Traversal
            </h1>
            <p style="color: #64748b; font-size: 0.875rem;">Deep exploration of a general graph using a Stack/Recursion.</p>
        </div>
        <div class="header-right" style="display: flex; align-items: center; gap: 1.5rem;">
             <div style="text-align: right;">
                <div id="timerDisplay" style="font-family: monospace; font-size: 1.5rem; font-weight: bold; color: #fbbf24; line-height: 1;">00:00</div>
                <div style="font-size: 0.875rem; color: #94a3b8;">Score: <span id="currentScoreDisplay">0</span></div>
            </div>
            <button id="resetBtn" class="btn btn-secondary">Reset</button>
        </div>
    </div>

    <div class="puzzle-grid">
        <div class="glass-panel" style="padding: 2rem; border-radius: 1rem; min-height: 500px;">
            <div id="mapContainer" style="position: relative; width: 100%; height: auto; min-height: 500px; background: rgba(10, 25, 41, 0.5); border-radius: 0.5rem; overflow: hidden;">
                <div style="position: absolute; inset: 0; width: 100%; height: 100%; display: grid; grid-template-columns: repeat(10, 1fr); grid-template-rows: repeat(10, 1fr); pointer-events: none; opacity: 0.2;">
                    @for(int i = 0; i < 100; i++) { <div style="border: 1px solid #334155;"></div> }
                </div>
                <svg id="algoSvg" viewBox="0 0 800 600" style="position: absolute; inset: 0; width: 100%; height: 100%; pointer-events: auto;"></svg>
                
                <div id="resultOverlay" style="position: absolute; inset: 0; display: none; align-items: center; justify-content: center; pointer-events: none; z-index: 10;">
                    <div style="background: rgba(15, 23, 42, 0.95); padding: 2.5rem; border-radius: 1rem; border: 1px solid #334155; text-align: center; backdrop-filter: blur(8px); min-width: 320px;">
                        <h2 style="font-size: 1.75rem; font-weight: bold; color: #f472b6; margin-bottom: 1.5rem;">ðŸŽ‰ DFS Complete!</h2>
                        <div style="display: flex; flex-direction: column; gap: 0.75rem; margin-bottom: 2rem;">
                            <div style="color: #cbd5e1; font-size: 1.1rem;">Order: <span id="resultTraversal" style="color: #f472b6; font-weight: bold;">-</span></div>
                            <div style="color: #cbd5e1; font-size: 1.1rem;">Time: <span id="resultTime" style="color: #4ade80; font-weight: bold;">00:00</span></div>
                            <div style="color: #cbd5e1; font-size: 1.1rem;">Score: <span id="finalScore" style="color: #c084fc; font-weight: bold;">0</span></div>
                        </div>
                        <button id="closeResultBtn" class="btn btn-primary" style="pointer-events: auto;">Close</button>
                    </div>
                </div>

                <div id="overlayMessage" style="position: absolute; inset: 0; display: flex; align-items: center; justify-content: center; pointer-events: none;">
                    <div style="color: #94a3b8; font-size: 0.875rem; background: rgba(0,0,0,0.6); padding: 1rem; border-radius: 0.5rem;">Generate a graph to begin</div>
                </div>
            </div>

            <!-- Stack Visualization Area -->
            <div style="margin-top: 1.5rem; background: rgba(15, 23, 42, 0.4); border: 1px solid #1e293b; border-radius: 0.75rem; padding: 1.5rem; display: flex; flex-direction: column; align-items: center;">
                <h4 style="color: #94a3b8; font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 1.5rem; width: 100%; text-align: left;">Current Stack (LIFO)</h4>
                
                <div style="position: relative; width: 60px; height: 180px; background: rgba(15, 23, 42, 0.6); border: 2px solid #334155; border-top: none; border-radius: 0 0 1rem 1rem; display: flex; flex-direction: column-reverse; align-items: center; padding: 0.5rem; gap: 0.4rem; overflow: hidden;">
                    <!-- Cylinder visual guide -->
                    <div style="position: absolute; top: 0; left: 0; right: 0; height: 10px; background: rgba(51, 65, 85, 0.3); border-bottom: 1px solid #334155; border-radius: 50% / 100% 100% 0 0; transform: translateY(-5px);"></div>
                    
                    <div id="stackContainer" style="display: flex; flex-direction: column-reverse; gap: 0.4rem; width: 100%; align-items: center;">
                        <span style="color: #64748b; font-style: italic; font-size: 0.75rem; text-align: center; margin-bottom: 2rem;">Stack is empty</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="glass-panel" style="padding: 1.5rem; border-radius: 1rem; display: flex; flex-direction: column; gap: 1.5rem;">
            <div id="inputSection">
                <h3 style="font-size: 1.125rem; font-weight: 600; color: white; margin-bottom: 1rem;">Graph Generation</h3>
                
                <div style="display: flex; gap: 0.5rem; margin-bottom: 1.5rem;">
                    <button id="tabRandom" class="btn btn-sm btn-primary">Random</button>
                    <button id="tabManual" class="btn btn-sm btn-secondary">Manual</button>
                </div>

                <div id="randomInputGroup">
                    <label style="display: block; color: #94a3b8; font-size: 0.875rem; margin-bottom: 0.5rem;">Node Count (4-12)</label>
                    <input type="number" id="nodeCountInput" value="7" min="4" max="12" class="form-control" style="width: 100%; background: #1e293b; border: 1px solid #334155; color: white; padding: 0.5rem; border-radius: 0.25rem; margin-bottom: 1.5rem;">
                    <button id="generateBtn" class="btn btn-primary" style="width: 100%;">Generate Random</button>
                </div>

                <div id="manualInputGroup" style="display: none;">
                    <label style="display: block; color: #94a3b8; font-size: 0.875rem; margin-bottom: 0.5rem;">Edges (e.g., A-B, B-C, C-A)</label>
                    <textarea id="manualEdgeInput" rows="3" class="form-control" style="width: 100%; background: #1e293b; border: 1px solid #334155; color: white; padding: 0.5rem; border-radius: 0.25rem; margin-bottom: 1.5rem; font-family: monospace; resize: none;">A-B, B-D, D-C, C-A, B-E</textarea>
                    <button id="generateManualBtn" class="btn btn-primary" style="width: 100%;">Create Graph</button>
                </div>
            </div>

            <div id="actionSection" style="display: none; flex-direction: column; gap: 1rem;">
                <h3 style="font-size: 1.125rem; font-weight: 600; color: white; margin-bottom: 0.5rem;">Controls</h3>
                <div style="margin-bottom: 1.5rem;">
                    <label style="color: #94a3b8; font-size: 0.875rem; display: block; margin-bottom: 0.5rem;">Start Node:</label>
                    <select id="startNodeSelect" class="form-control" style="width: 100%; background: #1e293b; border: 1px solid #334155; color: white; padding: 0.5rem; border-radius: 0.25rem;">
                        <option value="A">A</option>
                    </select>
                </div>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                    <button id="solveBtn" class="btn btn-primary" style="background: linear-gradient(135deg, #f472b6 0%, #a855f7 100%); border: none;">DFS (Auto)</button>
                    <button id="manualSolveBtn" class="btn btn-secondary" style="border-color: #facc15; color: #facc15;">Manual Solve</button>
                </div>
                 <div id="stepControls" style="display: none; gap: 0.5rem; justify-content: center; margin-top: 0.5rem;">
                     <button id="prevBtn" class="btn btn-sm btn-secondary" style="padding: 0.25rem 0.75rem;">&lt;</button>
                     <button id="pauseBtn" class="btn btn-sm btn-secondary" style="padding: 0.25rem 0.75rem;">||</button>
                     <button id="nextBtn" class="btn btn-sm btn-secondary" style="padding: 0.25rem 0.75rem;">&gt;</button>
                 </div>
            </div>

            <div style="border-top: 1px solid rgba(255, 255, 255, 0.1); padding-top: 1rem;">
                 <h3 style="font-size: 1.125rem; font-weight: 600; color: white; margin-bottom: 0.75rem;">Status</h3>
                 <div id="statusText" style="margin-bottom: 1rem; font-size: 0.875rem; color: #cbd5e1; min-height: 3rem; background: rgba(0,0,0,0.2); padding: 0.5rem; border-radius: 0.5rem;">Ready to generate graph.</div>
            </div>

            <div style="border-top: 1px solid rgba(255, 255, 255, 0.1); padding-top: 1.5rem; margin-top: 1rem;">
                <h3 style="font-size: 1.125rem; font-weight: bold; color: white; margin-bottom: 1rem;">Complexity Analysis</h3>
                <div style="margin-bottom: 1rem;">
                    <p style="color: #94a3b8; font-size: 0.75rem; margin-bottom: 0.25rem;">Time Complexity:</p>
                    <div style="background: rgba(244, 114, 182, 0.2); border: 1px solid rgba(244, 114, 182, 0.5); color: #f472b6; padding: 0.25rem 0.75rem; border-radius: 0.375rem; display: inline-block; font-family: monospace; font-size: 0.875rem; margin-bottom: 1rem;">
                        O(V + E)
                    </div>
                    
                    <p style="color: #94a3b8; font-size: 0.75rem; margin-bottom: 0.25rem;">Space Complexity:</p>
                    <div style="background: rgba(168, 85, 247, 0.2); border: 1px solid rgba(168, 85, 247, 0.5); color: #a855f7; padding: 0.25rem 0.75rem; border-radius: 0.375rem; display: inline-block; font-family: monospace; font-size: 0.875rem;">
                        O(V)
                    </div>
                </div>
                <h3 style="font-size: 1.125rem; font-weight: bold; color: white; margin-bottom: 0.5rem;">How it works</h3>
                <p style="color: #94a3b8; font-size: 0.875rem; margin-bottom: 1rem; line-height: 1.5;">
                    DFS explores a graph by going as deep as possible along each branch before backtracking. It uses a <b>Stack</b> (LIFO) or <b>Recursion</b> to keep track of the path. A <b>Visited Set</b> ensures nodes are only visited once.
                </p>
                <h3 style="font-size: 1.125rem; font-weight: bold; color: white; margin-bottom: 0.5rem;">DFS Pseudocode</h3>
                <div id="algoPseudocode" style="background: #0f172a; padding: 1rem; border-radius: 0.5rem; border: 1px solid #1e293b; font-family: monospace; font-size: 0.8rem; color: #4ade80; line-height: 1.5;">
                    <span style="color: #f472b6;">DFS</span>(graph, start):<br>
                    &nbsp;&nbsp;stack = [start]<br>
                    &nbsp;&nbsp;visited = {}<br>
                    &nbsp;&nbsp;<span style="color: #94a3b8;">while</span> stack is not empty:<br>
                    &nbsp;&nbsp;&nbsp;&nbsp;u = stack.<span style="color: #fbbf24;">pop</span>()<br>
                    &nbsp;&nbsp;&nbsp;&nbsp;<span style="color: #94a3b8;">if</span> u not in visited:<br>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;visited.<span style="color: #fbbf24;">add</span>(u)<br>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span style="color: #94a3b8;">for</span> each neighbor v of u:<br>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;stack.<span style="color: #fbbf24;">push</span>(v)
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts { <script src="~/js/dfs-graph.js"></script> }
