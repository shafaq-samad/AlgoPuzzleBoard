@{
    ViewData["Title"] = "Interpolation Search Visualizer";
}

<style>
    .array-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        min-height: 250px;
        padding: 2rem;
        position: relative;
        overflow-x: auto;
        width: 100%;
        box-sizing: border-box;
    }
    
    .array-box {
        width: 50px;
        height: 50px;
        background: rgba(15, 23, 42, 0.6);
        border: 2px solid #334155;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        color: white;
        font-size: 1.1rem;
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
    }
    
    .array-box.inactive {
        opacity: 0.2;
        transform: scale(0.9);
        border-color: #334155;
    }

    .array-box.active-range {
        background: rgba(16, 185, 129, 0.1); 
        border-color: #10b981; 
    }

    .array-box.probe {
        background: #8b5cf6; /* Purple for Probe */
        border-color: #8b5cf6;
        transform: scale(1.15);
        box-shadow: 0 0 15px rgba(139, 92, 246, 0.4);
        z-index: 5;
    }
    
    .array-box.found {
        background: #10b981;
        border-color: #10b981;
        transform: scale(1.2);
        box-shadow: 0 0 20px rgba(16, 185, 129, 0.6);
        z-index: 10;
    }

    /* Markers */
    .index-marker {
        position: absolute;
        bottom: -35px;
        font-size: 0.7rem;
        font-weight: bold;
        padding: 2px 6px;
        border-radius: 4px;
        white-space: nowrap;
    }

    .marker-low {
        color: #ec4899;
        border: 1px solid #ec4899;
    }

    .marker-high {
        color: #f59e0b;
        border: 1px solid #f59e0b;
        bottom: -60px;
    }

    .marker-probe {
        color: #8b5cf6;
        top: -30px;
    }

    /* Input Styles */
    .input-section {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }
    
    .search-controls-wrapper {
        display: flex;
        gap: 1rem;
        align-items: center;
        flex-wrap: wrap;
    }
    
    .search-input {
        flex: 2;
        min-width: 200px;
        padding: 0.75rem;
        background: rgba(15, 23, 42, 0.6);
        border: 1px solid #334155;
        border-radius: 0.5rem;
        color: white;
        font-size: 0.875rem;
    }
    
    .target-input {
        flex: 1;
        min-width: 120px;
        padding: 0.75rem;
        background: rgba(15, 23, 42, 0.6);
        border: 1px solid #334155;
        border-radius: 0.5rem;
        color: white;
        font-size: 0.875rem;
        border-color: #8b5cf6; 
    }

    .legend-box {
        display: flex;
        gap: 1rem;
        justify-content: center;
        font-size: 0.75rem;
        color: #94a3b8;
        margin-top: 1rem;
        flex-wrap: wrap;
    }
    
    .legend-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .legend-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
    }

    @@media (max-width: 768px) {
        .search-controls-wrapper {
            flex-direction: column;
            align-items: stretch;
        }
    }
</style>

<div class="space-y-6 animate-fade-in-up">
    <!-- Header -->
    <div class="glass-panel algo-header" style="flex-wrap: wrap; gap: 1rem;">
        <div class="header-left" style="min-width: 200px;">
            <h1 style="font-size: 1.875rem; font-weight: bold; background: linear-gradient(135deg, #8b5cf6 0%, #3b82f6 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; margin-bottom: 0.25rem;">
                Interpolation Search
            </h1>
            <p style="color: #64748b; font-size: 0.875rem;">Probe-based Search Algorithm</p>
        </div>
        <div class="header-right" style="flex-wrap: wrap; gap: 0.5rem; justify-content: flex-start;">
            <div style="display: flex; flex-direction: column; align-items: end; margin-right: 1rem; width: 100%; align-items: flex-start; margin-bottom: 0.5rem;">
                <span id="timerDisplay" style="font-family: monospace; font-size: 1.25rem; color: #facc15; font-weight: bold;">00:00</span>
                <span id="scoreDisplay" style="font-size: 0.875rem; color: #94a3b8;">Score: 0</span>
            </div>
            <button id="resetBtn" class="btn btn-secondary" style="flex: 1; min-width: 80px;">
                Reset
            </button>
            <button id="startBtn" class="btn btn-secondary" style="border-color: #8b5cf6; color: #8b5cf6; flex: 1; min-width: 100px;">
                Start Search
            </button>
            <button id="autoSolveBtn" class="btn btn-primary" style="background: linear-gradient(135deg, #8b5cf6 0%, #3b82f6 100%); flex: 1; min-width: 100px;">
                Auto Solve
            </button>
        </div>
    </div>

    <div class="puzzle-grid">
        <!-- Visualization Panel -->
        <div class="glass-panel" style="padding: 2rem; border-radius: 1rem;">
            <!-- Input Section -->
            <div class="input-section">
                <div>
                     <label style="display: block; color: #cbd5e1; font-size: 0.875rem; margin-bottom: 0.5rem; font-weight: 600;">
                        Configuration:
                    </label>
                    
                    <div class="search-controls-wrapper">
                        <!-- Array Input -->
                        <div style="flex: 2; display: flex; flex-direction: column; gap: 0.25rem;">
                            <label for="arrayInput" style="font-size: 0.75rem; color: #94a3b8;">Array Elements (will be sorted):</label>
                            <input 
                                type="text" 
                                id="arrayInput" 
                                class="search-input"
                                placeholder="e.g., 10, 20, 30, 40, 50, 60, 70"
                            />
                        </div>
                        
                        <!-- Target Input -->
                        <div style="flex: 1; display: flex; flex-direction: column; gap: 0.25rem;">
                             <label for="targetInput" style="font-size: 0.75rem; color: #8b5cf6;">Find Value:</label>
                             <input 
                                type="number" 
                                id="targetInput" 
                                class="target-input"
                                placeholder="Value"
                            />
                        </div>
                    </div>
                    
                    <div style="display: flex; gap: 0.5rem; margin-top: 0.75rem;">
                        <button id="generateBtn" class="btn btn-secondary">
                            Generate Uniform Array
                        </button>
                    </div>
                    
                    <p id="inputError" style="color: #ef4444; font-size: 0.75rem; margin-top: 0.5rem; display: none;"></p>
                </div>
            </div>

            <!-- Array Visualization -->
            <div id="arrayContainer" class="array-container">
                <p style="color: #94a3b8; text-align: center;">Enter array and target to begin.</p>
            </div>
            
            <!-- Legend -->
            <div class="legend-box">
                <div class="legend-item"><span class="legend-dot" style="background: #ec4899;"></span> Low</div>
                <div class="legend-item"><span class="legend-dot" style="background: #f59e0b;"></span> High</div>
                <div class="legend-item"><span class="legend-dot" style="background: #8b5cf6;"></span> Probe (Calc. Pos)</div>
                <div class="legend-item"><span class="legend-dot" style="background: #334155; opacity: 0.5"></span> Ignored</div>
            </div>

            <!-- Step Controls -->
            <div id="stepControls" style="display: none; gap: 0.5rem; justify-content: center; margin-top: 1rem; flex-wrap: wrap;">
                <button id="prevStepBtn" class="btn btn-sm btn-secondary" style="padding: 0.5rem 1rem; flex: 1; min-width: 100px;">
                    <span style="font-size: 1.25rem;">&larr;</span> Previous
                </button>
                <button id="pauseBtn" class="btn btn-sm btn-secondary" style="padding: 0.5rem 1rem; flex: 1; min-width: 100px;">
                    <span style="font-size: 1.25rem;">||</span> Pause
                </button>
                <button id="nextStepBtn" class="btn btn-sm btn-secondary" style="padding: 0.5rem 1rem; flex: 1; min-width: 100px;">
                    Next <span style="font-size: 1.25rem;">&rarr;</span>
                </button>
            </div>

            <!-- Step Description -->
            <div id="stepDescription" style="margin-top: 1rem; padding: 1rem; background: rgba(0,0,0,0.3); border-radius: 0.5rem; border-left: 4px solid #8b5cf6; min-height: 3rem;">
                <p style="color: #cbd5e1; font-size: 0.875rem; margin: 0;">
                    Ready to search.
                </p>
            </div>
        </div>

        <!-- Stats Panel -->
        <div class="glass-panel" style="padding: 1.5rem; border-radius: 1rem; display: flex; flex-direction: column; gap: 1.5rem;">
            <div>
                <h3 style="font-size: 1.125rem; font-weight: 600; color: white; margin-bottom: 1rem;">Search Stats</h3>
                <div style="display: flex; flex-direction: column; gap: 0.75rem;">
                    <div style="display: flex; justify-content: space-between; align-items: center; font-size: 0.875rem; color: #94a3b8;">
                        <span>Array Size:</span>
                        <span id="arraySize" style="color: #60a5fa; font-weight: 600;">0</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; align-items: center; font-size: 0.875rem; color: #94a3b8;">
                        <span>Comparisons:</span>
                        <span id="comparisons" style="color: #fbbf24; font-weight: 600;">0</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; align-items: center; font-size: 0.875rem; color: #94a3b8;">
                        <span>Current Probe:</span>
                        <span id="currentProbeVal" style="color: #8b5cf6; font-weight: bold;">-</span>
                    </div>
                </div>
            </div>

            <div style="border-top: 1px solid rgba(255, 255, 255, 0.1); padding-top: 1rem;">
                <h3 style="font-size: 1.125rem; font-weight: 600; color: white; margin-bottom: 0.75rem;">Complexity Analysis</h3>
                <div style="display: flex; flex-direction: column; gap: 0.75rem;">
                     <div>
                        <p style="color: #94a3b8; font-size: 0.75rem; margin-bottom: 0.25rem;">Time Complexity (Best/Avg):</p>
                        <span class="complexity-badge" style="border-color: #10b981; color: #34d399; background: rgba(16, 185, 129, 0.15);">O(log(log n))</span>
                    </div>
                    <div>
                        <p style="color: #94a3b8; font-size: 0.75rem; margin-bottom: 0.25rem;">Time Complexity (Worst - Non-Uniform):</p>
                         <span class="complexity-badge" style="border-color: #ef4444; color: #f87171; background: rgba(239, 68, 68, 0.15);">O(n)</span>
                    </div>
                </div>
            </div>

            <div style="border-top: 1px solid rgba(255, 255, 255, 0.1); padding-top: 1rem;">
                <h3 style="font-size: 1.125rem; font-weight: 600; color: white; margin-bottom: 0.75rem;">How it works</h3>
                <p style="font-size: 0.875rem; color: #94a3b8; line-height: 1.6; margin-bottom: 0.75rem;">
                    Interpolation Search is an improvement over Binary Search for instances closer to the edges, assuming <span style="color: #8b5cf6; font-weight: 600;">uniformly distributed</span> data.
                    It calculates a probe position based on the value of the target.
                </p>
                <div style="background: rgba(0, 0, 0, 0.3); padding: 0.75rem; border-radius: 0.5rem; font-family: 'Courier New', monospace; font-size: 0.75rem; color: #34d399; line-height: 1.6; word-break: break-all;">
                    pos = lo + ((x - arr[lo]) * (hi - lo) / (arr[hi] - arr[lo]))
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Result Overlay -->
<div id="resultOverlay" style="position: fixed; inset: 0; display: none; align-items: center; justify-content: center; background: rgba(0, 0, 0, 0.7); z-index: 50; backdrop-filter: blur(4px);">
    <div style="background: rgba(15, 23, 42, 0.95); padding: 2rem; border-radius: 1rem; border: 2px solid #3b82f6; text-align: center; max-width: 400px;">
        <h2 id="resultTitle" style="font-size: 1.875rem; font-weight: bold; color: #60a5fa; margin-bottom: 1rem;">Search Complete</h2>
        <div style="display: flex; flex-direction: column; gap: 0.75rem; margin-bottom: 1.5rem;">
            <p id="resultMessage" style="color: #cbd5e1; font-size: 1.1rem; margin-bottom: 0.5rem;">
                Target found!
            </p>
            <p style="color: #cbd5e1; font-size: 1rem;">
                Comparisons: <span id="resultComparisons" style="color: #fbbf24; font-weight: bold;">0</span>
            </p>
            <p style="color: #cbd5e1; font-size: 1rem;">
                Time Taken: <span id="resultTime" style="color: #34d399; font-weight: bold;">00:00</span>
            </p>
            <p style="color: #cbd5e1; font-size: 1rem;">
                Score: <span id="resultScore" style="color: #c084fc; font-weight: bold;">0</span>
            </p>
        </div>
        <button id="closeResultBtn" class="btn btn-primary" style="background: linear-gradient(135deg, #8b5cf6 0%, #3b82f6 100%);">
            Close
        </button>
    </div>
</div>

@section Scripts {
    <script src="~/js/interpolationsearch.js"></script>
}
