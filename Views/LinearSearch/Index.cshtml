@{
    ViewData["Title"] = "Linear Search Visualizer";
}

<style>
    .array-container {
        display: flex;
        align-items: center; /* Center vertically for search */
        justify-content: center;
        gap: 8px; /* Slightly wider gap for search boxes */
        min-height: 200px;
        padding: 2rem;
        position: relative;
        overflow-x: auto;
        width: 100%;
        box-sizing: border-box;
    }
    
    /* Box style instead of bars for search */
    .array-box {
        width: 50px;
        height: 50px;
        background: rgba(15, 23, 42, 0.6);
        border: 2px solid #334155;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        color: white;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        position: relative;
    }
    
    .array-box.checking {
        background: #f59e0b; /* Amber/Yellow checking */
        border-color: #f59e0b;
        transform: scale(1.1);
        box-shadow: 0 0 15px rgba(245, 158, 11, 0.5);
    }
    
    .array-box.found {
        background: #10b981; /* Green found */
        border-color: #10b981;
        transform: scale(1.2);
        box-shadow: 0 0 20px rgba(16, 185, 129, 0.6);
        z-index: 10;
    }

    .array-box.visited {
        opacity: 0.5; /* Fade out checked items */
        background: #1e293b;
    }
    
    /* Index label below box */
    .index-label {
        position: absolute;
        bottom: -25px;
        font-size: 0.75rem;
        color: #64748b;
    }

    .input-section {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    /* Mobile Responsive Input Styles */
    .search-controls-wrapper {
        display: flex;
        gap: 1rem;
        align-items: center;
        flex-wrap: wrap; /* Ensure wrapping on small screens */
    }
    
    .search-input {
        flex: 2; /* Take more space */
        min-width: 200px;
        padding: 0.75rem;
        background: rgba(15, 23, 42, 0.6);
        border: 1px solid #334155;
        border-radius: 0.5rem;
        color: white;
        font-size: 0.875rem;
    }
    
    .target-input {
        flex: 1; /* Take less space */
        min-width: 120px;
        padding: 0.75rem;
        background: rgba(15, 23, 42, 0.6);
        border: 1px solid #334155;
        border-radius: 0.5rem;
        color: white;
        font-size: 0.875rem;
        border-color: #3b82f6; /* Highlight target input */
    }

    @@media (max-width: 768px) {
        .search-controls-wrapper {
            flex-direction: column;
            align-items: stretch;
        }
    }
</style>

<div class="space-y-6 animate-fade-in-up">
    <!-- Header -->
    <div class="glass-panel algo-header" style="flex-wrap: wrap; gap: 1rem;">
        <div class="header-left" style="min-width: 200px;">
            <h1 style="font-size: 1.875rem; font-weight: bold; background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; margin-bottom: 0.25rem;">
                Linear Search
            </h1>
            <p style="color: #64748b; font-size: 0.875rem;">Search Algorithm</p>
        </div>
        <div class="header-right" style="flex-wrap: wrap; gap: 0.5rem; justify-content: flex-start;">
            <div style="display: flex; flex-direction: column; align-items: end; margin-right: 1rem; width: 100%; align-items: flex-start; margin-bottom: 0.5rem;">
                <span id="timerDisplay" style="font-family: monospace; font-size: 1.25rem; color: #facc15; font-weight: bold;">00:00</span>
                <span id="scoreDisplay" style="font-size: 0.875rem; color: #94a3b8;">Score: 0</span>
            </div>
            <button id="resetBtn" class="btn btn-secondary" style="flex: 1; min-width: 80px;">
                Reset
            </button>
            <button id="startBtn" class="btn btn-secondary" style="border-color: #06b6d4; color: #06b6d4; flex: 1; min-width: 100px;">
                Start Search
            </button>
            <button id="autoSolveBtn" class="btn btn-primary" style="background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%); flex: 1; min-width: 100px;">
                Auto Solve
            </button>
        </div>
    </div>

    <div class="puzzle-grid">
        <!-- Visualization Panel -->
        <div class="glass-panel" style="padding: 2rem; border-radius: 1rem;">
            <!-- Input Section -->
            <div class="input-section">
                <div>
                     <label style="display: block; color: #cbd5e1; font-size: 0.875rem; margin-bottom: 0.5rem; font-weight: 600;">
                        Configuration:
                    </label>
                    
                    <div class="search-controls-wrapper">
                        <!-- Array Input -->
                        <div style="flex: 2; display: flex; flex-direction: column; gap: 0.25rem;">
                            <label for="arrayInput" style="font-size: 0.75rem; color: #94a3b8;">Array Elements (comma-separated):</label>
                            <input 
                                type="text" 
                                id="arrayInput" 
                                class="search-input"
                                placeholder="e.g., 10, 50, 30, 70, 80, 20"
                            />
                        </div>
                        
                        <!-- Target Input -->
                        <div style="flex: 1; display: flex; flex-direction: column; gap: 0.25rem;">
                             <label for="targetInput" style="font-size: 0.75rem; color: #94a3b8; color: #60a5fa;">Find Value:</label>
                             <input 
                                type="number" 
                                id="targetInput" 
                                class="target-input"
                                placeholder="Value"
                            />
                        </div>
                    </div>
                    
                    <div style="display: flex; gap: 0.5rem; margin-top: 0.75rem;">
                        <button id="generateBtn" class="btn btn-secondary">
                            Generate Random
                        </button>
                    </div>
                    
                    <p id="inputError" style="color: #ef4444; font-size: 0.75rem; margin-top: 0.5rem; display: none;"></p>
                </div>
            </div>

            <!-- Array Visualization -->
            <div id="arrayContainer" class="array-container">
                <p style="color: #94a3b8; text-align: center;">Enter array and target value to begin</p>
            </div>

            <!-- Step Controls -->
            <div id="stepControls" style="display: none; gap: 0.5rem; justify-content: center; margin-top: 1rem; flex-wrap: wrap;">
                <button id="prevStepBtn" class="btn btn-sm btn-secondary" style="padding: 0.5rem 1rem; flex: 1; min-width: 100px;">
                    <span style="font-size: 1.25rem;">&larr;</span> Previous
                </button>
                <button id="pauseBtn" class="btn btn-sm btn-secondary" style="padding: 0.5rem 1rem; flex: 1; min-width: 100px;">
                    <span style="font-size: 1.25rem;">||</span> Pause
                </button>
                <button id="nextStepBtn" class="btn btn-sm btn-secondary" style="padding: 0.5rem 1rem; flex: 1; min-width: 100px;">
                    Next <span style="font-size: 1.25rem;">&rarr;</span>
                </button>
            </div>

            <!-- Step Description -->
            <div id="stepDescription" style="margin-top: 1rem; padding: 1rem; background: rgba(0,0,0,0.3); border-radius: 0.5rem; border-left: 4px solid #06b6d4; min-height: 3rem;">
                <p style="color: #cbd5e1; font-size: 0.875rem; margin: 0;">
                    Ready to search.
                </p>
            </div>
        </div>

        <!-- Stats Panel -->
        <div class="glass-panel" style="padding: 1.5rem; border-radius: 1rem; display: flex; flex-direction: column; gap: 1.5rem;">
            <div>
                <h3 style="font-size: 1.125rem; font-weight: 600; color: white; margin-bottom: 1rem;">Search Stats</h3>
                <div style="display: flex; flex-direction: column; gap: 0.75rem;">
                    <div style="display: flex; justify-content: space-between; align-items: center; font-size: 0.875rem; color: #94a3b8;">
                        <span>Array Size:</span>
                        <span id="arraySize" style="color: #60a5fa; font-weight: 600;">0</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; align-items: center; font-size: 0.875rem; color: #94a3b8;">
                        <span>Comparisons:</span>
                        <span id="comparisons" style="color: #fbbf24; font-weight: 600;">0</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; align-items: center; font-size: 0.875rem; color: #94a3b8;">
                        <span>Status:</span>
                        <span id="searchStatus" style="color: #94a3b8; font-weight: 600;">Idle</span>
                    </div>
                </div>
            </div>

            <div style="border-top: 1px solid rgba(255, 255, 255, 0.1); padding-top: 1rem;">
                <h3 style="font-size: 1.125rem; font-weight: 600; color: white; margin-bottom: 0.75rem;">Complexity Analysis</h3>
                <div style="display: flex; flex-direction: column; gap: 0.75rem;">
                     <div>
                        <p style="color: #94a3b8; font-size: 0.75rem; margin-bottom: 0.25rem;">Time Complexity (Best):</p>
                        <span class="complexity-badge" style="border-color: #10b981; color: #34d399; background: rgba(16, 185, 129, 0.15);">O(1)</span>
                    </div>
                    <div>
                        <p style="color: #94a3b8; font-size: 0.75rem; margin-bottom: 0.25rem;">Time Complexity (Worst):</p>
                        <span class="complexity-badge" style="border-color: #ef4444; color: #f87171; background: rgba(239, 68, 68, 0.15);">O(n)</span>
                    </div>
                     <div>
                        <p style="color: #94a3b8; font-size: 0.75rem; margin-bottom: 0.25rem;">Space Complexity:</p>
                        <span class="complexity-badge">O(1)</span>
                    </div>
                </div>
            </div>

            <div style="border-top: 1px solid rgba(255, 255, 255, 0.1); padding-top: 1rem;">
                <h3 style="font-size: 1.125rem; font-weight: 600; color: white; margin-bottom: 0.75rem;">How it works</h3>
                <p style="font-size: 0.875rem; color: #94a3b8; line-height: 1.6; margin-bottom: 0.75rem;">
                    Linear Search iterates through the array <span style="color: #06b6d4; font-weight: 600;">one by one</span> until the target value is found or the end is reached.
                </p>
                <div style="background: rgba(0, 0, 0, 0.3); padding: 0.75rem; border-radius: 0.5rem; font-family: 'Courier New', monospace; font-size: 0.75rem; color: #34d399; line-height: 1.6;">
                    linearSearch(arr, target)<br/>
                    &nbsp;&nbsp;for i = 0 to len(arr)-1<br/>
                    &nbsp;&nbsp;&nbsp;&nbsp;if arr[i] == target<br/>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;return i<br/>
                    &nbsp;&nbsp;return -1
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Result Overlay -->
<div id="resultOverlay" style="position: fixed; inset: 0; display: none; align-items: center; justify-content: center; background: rgba(0, 0, 0, 0.7); z-index: 50; backdrop-filter: blur(4px);">
    <div style="background: rgba(15, 23, 42, 0.95); padding: 2rem; border-radius: 1rem; border: 2px solid #3b82f6; text-align: center; max-width: 400px;">
        <h2 id="resultTitle" style="font-size: 1.875rem; font-weight: bold; color: #60a5fa; margin-bottom: 1rem;">Search Complete</h2>
        <div style="display: flex; flex-direction: column; gap: 0.75rem; margin-bottom: 1.5rem;">
            <p id="resultMessage" style="color: #cbd5e1; font-size: 1.1rem; margin-bottom: 0.5rem;">
                Target found!
            </p>
            <p style="color: #cbd5e1; font-size: 1rem;">
                Comparisons: <span id="resultComparisons" style="color: #fbbf24; font-weight: bold;">0</span>
            </p>
            <p style="color: #cbd5e1; font-size: 1rem;">
                Time Taken: <span id="resultTime" style="color: #34d399; font-weight: bold;">00:00</span>
            </p>
            <p style="color: #cbd5e1; font-size: 1rem;">
                Score: <span id="resultScore" style="color: #c084fc; font-weight: bold;">0</span>
            </p>
        </div>
        <button id="closeResultBtn" class="btn btn-primary" style="background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);">
            Close
        </button>
    </div>
</div>

@section Scripts {
    <script src="~/js/linearsearch.js"></script>
}
