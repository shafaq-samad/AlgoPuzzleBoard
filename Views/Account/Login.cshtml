@model AlgoPuzzleBoard.MVC.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}



<style>
    /* Scoped styles for Login page to match reference exactly */
    .login-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 85vh; /* Center in the available view area */
        width: 100%;
        position: relative;
    }

    .premium-glass-card {
        width: 100%;
        max-width: 400px;
        padding: 2.5rem;
        border-radius: 20px;
        background: rgba(15, 23, 42, 0.6);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-top: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5),
                    inset 0 0 0 1px rgba(255, 255, 255, 0.05);
        position: relative;
        overflow: hidden;
    }

    /* Glow effect from reference */
    @@media (max-width: 480px) {
        .premium-glass-card {
            padding: 1.5rem;
        }
    }

    .premium-glass-card::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(139, 92, 246, 0.15) 0%, transparent 70%);
        pointer-events: none;
    }

    .login-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        text-shadow: 0 0 20px rgba(251, 191, 36, 0.5);
    }

    .input-group {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .glass-input-premium {
        width: 100%;
        padding: 0.875rem 1rem;
        padding-right: 2.5rem; /* Space for icon */
        background: rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        color: white;
        font-size: 0.95rem;
        outline: none;
        transition: all 0.3s;
    }

    .glass-input-premium:focus {
        border-color: #8b5cf6;
        box-shadow: 0 0 0 2px rgba(139, 92, 246, 0.2);
        background: rgba(0, 0, 0, 0.3);
    }

    .input-icon {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        color: rgba(255, 255, 255, 0.4);
        pointer-events: none;
    }

    .btn-login-gradient {
        width: 100%;
        padding: 0.875rem;
        border-radius: 8px;
        background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
        color: white;
        font-weight: 600;
        font-size: 1rem;
        border: none;
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-top: 1rem;
        box-shadow: 0 4px 15px rgba(124, 58, 237, 0.3);
    }

    .btn-login-gradient:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(124, 58, 237, 0.4);
    }

    .social-login {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .social-btn {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
        font-size: 1.2rem;
    }

    .social-btn:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: scale(1.1);
    }
</style>

<div class="login-wrapper">
    <div class="premium-glass-card">
        <div class="text-center" style="position: relative; z-index: 1;">
            <div class="login-icon">üîê</div>
            <h2 style="color: white; margin-bottom: 0.5rem; font-weight: bold; font-size: 1.75rem;">Welcome Back</h2>
            <p style="color: #94a3b8; margin-bottom: 2rem; font-size: 0.9rem;">Please login to your account</p>
        </div>

        <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" style="position: relative; z-index: 1;">
            <div asp-validation-summary="ModelOnly" class="text-danger" style="color: #f87171; text-align: center; margin-bottom: 1rem; font-size: 0.875rem;"></div>
            
            <div class="input-group">
                <label asp-for="Username" style="display: block; margin-bottom: 0.5rem; color: #e2e8f0; font-size: 0.875rem;">Username</label>
                <div style="position: relative;">
                    <input asp-for="Username" class="glass-input-premium" placeholder="Enter username" />
                    <span class="input-icon">üë§</span>
                </div>
                <span asp-validation-for="Username" style="color: #f87171; font-size: 0.75rem; margin-top: 0.25rem; display: block;"></span>
            </div>

            <div class="input-group">
                <label asp-for="Password" style="display: block; margin-bottom: 0.5rem; color: #e2e8f0; font-size: 0.875rem;">Password</label>
                <div style="position: relative;">
                    <input asp-for="Password" type="password" class="glass-input-premium" placeholder="Enter password" />
                    <span class="input-icon">üîí</span>
                </div>
                <span asp-validation-for="Password" style="color: #f87171; font-size: 0.75rem; margin-top: 0.25rem; display: block;"></span>
            </div>

            <button type="submit" class="btn-login-gradient">Login</button>
        </form>

        <div class="social-login" style="position: relative; z-index: 1;">
            <div class="social-btn" title="Google">G</div>
            <div class="social-btn" title="GitHub">üêô</div>
        </div>

        <div class="text-center" style="margin-top: 1.5rem; position: relative; z-index: 1;">
            <p style="color: #64748b; font-size: 0.875rem;">Don't have an account? <a asp-action="Register" style="color: #a78bfa; text-decoration: none; font-weight: 600;">Sign Up</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
